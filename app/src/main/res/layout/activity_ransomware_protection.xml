<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dark_blue_gradient"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/tvScanStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ransomware Protection"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:paddingBottom="10dp" />


        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:progressTint="#FF0000"
            android:indeterminate="false" />


        <TextView
            android:id="@+id/tvProgressPercent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0%"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:layout_marginTop="8dp"
            android:visibility="visible" />


        <Button
            android:id="@+id/btnStartScan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Ransomware Scan"
            android:textSize="18sp"
            android:background="@drawable/button_red"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp" />


        <TextView
            android:id="@+id/tvScanResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ready to monitor files..."
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:paddingTop="20dp"
            android:visibility="gone" />


        <TextView
            android:id="@+id/logView"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="#101010"
            android:textColor="#00FF00"
            android:scrollbars="vertical"
            android:text="Log Output:"
            android:padding="10dp"
            android:textSize="14sp" />

    </LinearLayout>
</ScrollView>

